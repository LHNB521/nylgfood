/* client/pages/info/info.wxss */

page {
  margin: 0;
  padding: 0;
  min-height: 100%;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-head {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.3);
  margin: 50rpx;
}

.food-img {
  width: 200rpx;
  height: 200rpx;
}

.page-content-box {
  width: 90%;
  display: flex;
  flex-direction: column;
}

/* 轮播 */
.swiper-container{
 width: 100%;
 height: 100%;
}
swiper {
height: 200rpx;
width: 100%;
}
swiper-item {
 width: 100%; 
 height: 100%;
 display: flex;
 flex-direction: row;
 justify-content: center;
}
.img
{
height:100rpx;
width: 100rpx;
}
.swiper-container .swiper{
height: 150rpx;
}

.info-box {
  width: 100%;
}

.appraise-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx;
  width: 80%;
}

.appraise-item-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.weui-progress__bar-box {
  width: 40%;
}

.myfont1 {
  font-size: smaller;
  opacity: 0.7;
}

.myfont2 {
  font-style: oblique;
  color: rgb(199, 25, 25);
}
