/* client/pages/menu/menu.wxss */

/* 卡片二css */

page, .page, .page__bd {
  height: 100%;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
}

.weui-navbar {
  background-color: white !important;
}

.container {
  margin-bottom: 100rpx;
}

.page__bd {
  padding-bottom: 0;
  width: 100%;
}
.head-img
{
  width:150rpx;
  height: 150rpx;
}
.dingdanbianhao {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 200rpx;
}
.page-head-box {
  position: fixed;
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  bottom: 50rpx;
}

.add-img {
  height: 100rpx;
  width: 100rpx;
  margin: 20rpx 0;
}

.title-text {
  font-size: 35rpx;
  margin: 20rpx 0 30rpx 0;
  text-align: center;
}

.list-box {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx;
  border-bottom: 1px solid rgba(177, 175, 175, 0.3);
}

.list-item-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item-img {
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx;
}

.item-info-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 40%;
}

.item-name {
  font-weight: 700;
}

.item-type {
  opacity: 0.5;
  font-size: 25rpx;
  color: black;
  font-style: normal;
}

.item-price {
  font-style: oblique;
  color: rgb(199, 25, 25);
}

.gtime-tex {
  opacity: 0.8;
}

.item-icon-box {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 卡片三css */

.list-box {
  width: 100%;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 10rpx;
  padding-right: 20rpx;
  margin-bottom: 40rpx;
}

.user-box {
  display: flex;
  align-items: center;
}

.item-img {
  width: 100rpx;
  height: 100rpx;
}
.item-icon {
  width: 40rpx;
  height: 40rpx;
}

.weui-input {
  border: 1px solid rgba(0, 0, 0, 0.2);
  padding-left: 20rpx;
}

.no {
  font-size: 1rem;
  text-align: center;
  margin-top: 50rpx;
}

/* 卡片一订单 */

.button-box {
  display: flex;
  align-items: center;
}
.over-btn {
  margin: 20rpx;
}
.myfont1 {
  font-style: oblique;
  color: rgb(199, 25, 25);
}
.myfont2 {
  font-size: smaller;
  opacity: 0.7;
}
