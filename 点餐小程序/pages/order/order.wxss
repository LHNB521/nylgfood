/* pages/order/order.wxss */

.contioner {
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #f6f6f6;
}

.img-box {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.head-img {
  height: 200rpx;
  width: 200rpx;
  margin: 0 auto;
}

.page-head-box {
  padding: 30rpx 40rpx;
  background-color: white;
}

.page-info-down {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.order-list-box {
  margin: 50rpx 0;
  background-color: white;
  padding: 0 50rpx;
}

.order-head-box {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  padding: 40rpx 0;
}

.order-body-box {
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.body-item-box {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 0;
}

.body-r {
  width: 70%;
}
.item-food-box
{
  display: flex;
}
.order-bottom-box {
  padding: 40rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

.bottom-text {
  text-align: center;
}

/* 字体 */

