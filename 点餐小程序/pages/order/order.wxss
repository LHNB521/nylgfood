  /* font-size: smaller; */
  opacity: 0.7;
}

.myfont3 {
  font-size: smaller;
  opacity: 0.7;
}

.myfont4 {
  font-size: 0.7rem;
  opacity: 0.7;
}

.myfont5 {
  font-size: 0.8rem;
  color: #71d381;
}

